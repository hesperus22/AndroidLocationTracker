<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start all"
        android:id="@+id/startAll"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start track"
        android:id="@+id/startTrack"
        android:layout_marginTop="133dp"
        android:layout_below="@+id/startAll"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start comm"
        android:id="@+id/startComm"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/startTrack"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop track"
        android:id="@+id/stopTrack"
        android:layout_alignTop="@+id/startTrack"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop comm"
        android:id="@+id/stopComm"
        android:layout_alignTop="@+id/startComm"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop all"
        android:id="@+id/stopAll"
        android:layout_alignBottom="@+id/startAll"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
